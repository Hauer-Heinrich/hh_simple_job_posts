                    <settings.jobsDetailView>
                        <TCEforms>
                            <label>Jobs Detail Page (optional)</label>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>1</size>
                                <maxitems>1</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </settings.jobsDetailView>

                    <settings.showDetailView>
                        <TCEforms>
                            <label>Show detail-view</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </settings.showDetailView>
                </el>
            </ROOT>
        </sDEF>
    </sheets>
</T3DataStructure>
